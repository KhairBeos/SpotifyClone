generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Artist {
  id        String   @id @default(cuid())
  name      String   @unique
  spotifyId String?  @unique
  images    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  albums    Album[]
  tracks    Track[]
}

model Album {
  id        String   @id @default(cuid())
  name      String
  spotifyId String?  @unique
  images    String?
  artist    Artist   @relation(fields: [artistId], references: [id])
  artistId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tracks    Track[]

  @@unique([artistId, name], name: "artistId_name")
}

model Track {
  id          String   @id @default(cuid())
  title       String
  durationMs  Int?
  spotifyId   String?  @unique
  filePath    String?
  trackNumber Int?
  discNumber  Int?
  album       Album?   @relation(fields: [albumId], references: [id])
  albumId     String?
  artist      Artist?  @relation(fields: [artistId], references: [id])
  artistId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
